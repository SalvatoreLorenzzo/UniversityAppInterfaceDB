<Window x:Class="UniversityApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniversityApp" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Навігація">
                <MenuItem Header="Кафедри" Click="DepartmentsMenuItem_Click"/>
                <MenuItem Header="Курси" Click="CoursesMenuItem_Click"/>
                <MenuItem Header="Студенти" Click="StudentsMenuItem_Click"/>
                <MenuItem Header="Викладачі" Click="ProfessorsMenuItem_Click"/>
                <MenuItem Header="Реєстрації" Click="EnrollmentsMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="MainContent"/>
    </DockPanel>
</Window>